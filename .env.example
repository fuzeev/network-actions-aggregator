# Конфигурация базы данных PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=network_events
POSTGRES_DSN=postgres://app_user:app_password@localhost:5432/network_events?sslmode=disable

# Конфигурация Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Конфигурация Kafka/Redpanda
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=events.telecom
KAFKA_GROUP_ID_INGESTOR=ingestor-group
KAFKA_GROUP_ID_AGGREGATOR=aggregator-group

# Настройки ingestor
INGESTOR_WORKER_COUNT=8
INGESTOR_BATCH_SIZE=1000
INGESTOR_BATCH_TIMEOUT=5s

# Настройки aggregator
AGGREGATOR_WORKER_COUNT=4

# Настройки API
API_GRPC_PORT=9090
API_HTTP_PORT=8000

# Настройки кэша
CACHE_DETAIL_TTL=5m
CACHE_AGG_DAY_TTL=1h
CACHE_AGG_MONTH_TTL=6h

# Логирование
LOG_LEVEL=info
LOG_FORMAT=json

# Профилирование (pprof)
PPROF_ENABLED=true
PPROF_PORT_INGESTOR=6060
PPROF_PORT_AGGREGATOR=6061
PPROF_PORT_API=6062

